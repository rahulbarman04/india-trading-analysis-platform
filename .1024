# Commands to run when "Run" button clicked - starts all three services
run_command:
  - 'cd backend && pip install -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload &'
  - 'cd streaming-service && npm install && npm start &'
  - 'cd frontend && npm install && npm run dev -- --host 0.0.0.0 --port 5173'
# Command to install or update dependencies, will execute each time a new thread created to ensure dependencies up-to-date
dependency_command: '(cd backend && pip install -r requirements.txt) && (cd streaming-service && npm install) && (cd frontend && npm install)'